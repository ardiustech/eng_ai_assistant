# AI Assistant Automation Framework - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# JIRA Integration (Gusto JIRA Skill)
# =============================================================================
# Generate API token: https://id.atlassian.com/manage-profile/security/api-tokens
ATLASSIAN_API_TOKEN=your_api_token_here

# JIRA base URL (without trailing slash)
JIRA_BASE_URL=https://yourcompany.atlassian.net

# JIRA email (used for authentication)
JIRA_EMAIL=your.email@company.com

# Default project key for JIRA operations
JIRA_PROJECT_KEY=PROJ

# =============================================================================
# Slack Integration (Gusto Slack Skill)
# =============================================================================
# Slack workspace URL (used for navigation)
SLACK_WORKSPACE_URL=https://yourcompany.slack.com

# =============================================================================
# Google Services (Google Docs Skill)
# =============================================================================
# Google OAuth credentials (if using Google Docs API)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# =============================================================================
# Browser Automation
# =============================================================================
# Microsoft Edge remote debugging port
EDGE_DEBUGGING_PORT=9222

# =============================================================================
# Development & Debugging
# =============================================================================
# Enable debug mode for enhanced logging
DEBUG=false

# Node.js environment
NODE_ENV=production

# =============================================================================
# Performance & Behavior
# =============================================================================
# Enable caching for better performance
ENABLE_CACHE=true

# Enable retry logic for failed operations
ENABLE_RETRY=true

# Maximum number of retries for failed operations
MAX_RETRIES=3

# =============================================================================
# Repository Management
# =============================================================================
# Default branch for repository setup
REPOS_DEFAULT_BRANCH=main

# SSH key path for repository access
REPOS_SSH_KEY_PATH=~/.ssh/id_ed25519

# =============================================================================
# Git Configuration
# =============================================================================
# Git user configuration (for commits)
GIT_USER_NAME=Your Name
GIT_USER_EMAIL=your@email.com

# =============================================================================
# Framework Configuration
# =============================================================================
# Framework version (automatically managed)
FRAMEWORK_VERSION=1.0.0

# Enable framework health checks
ENABLE_HEALTH_CHECKS=true

# =============================================================================
# Skill-Specific Configuration
# =============================================================================
# Add any custom skill configurations here
# MY_CUSTOM_SKILL_API_KEY=your_api_key_here
# MY_CUSTOM_SKILL_BASE_URL=https://api.myservice.com
